            // Phase 4 Step 2B: Update all stem volumes
            updateStemAudioState();

            // Calculate decibels (relative to 100% = 0dB)
            let db;
            if (value === 0) {
                db = '-∞';
            } else {
                db = (20 * Math.log10(value / 100)).toFixed(1);
                db = (db >= 0 ? '+' : '') + db;
            }

            document.getElementById('volumePercent').textContent = `${value}% (${db} dB)`;
