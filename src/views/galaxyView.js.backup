 */
function updateActiveFiltersDisplay() {
    const container = document.getElementById('activeFiltersDisplay');
    if (!container) return;

    const hasFilters = canHaveTags.size > 0 || mustHaveTags.size > 0 || excludeTags.size > 0;

    if (!hasFilters) {
