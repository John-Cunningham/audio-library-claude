function wireUpMenuControls() {
    // Create context object with references to internal variables/functions
    const context = {
        recreateParticles,
        updateClusterPositions,
        setMotionMode,
        hiddenCategories,
        particleSystem,
        createParticleTexture,
        particles,
        scene,
        audioFilesData,
